{
  "version": 1,
  "hooks": {
    "beforeShellExecution": [
      {
        "command": ".cursor/hooks/validate-shell.sh",
        "matcher": "git|awk|sed|rm"
      }
    ],
    "postToolUse": [{ "command": ".cursor/hooks/on-tool-use.sh" }],
    "stop": [{ "command": ".cursor/hooks/on-stop.sh" }]
  }
}
